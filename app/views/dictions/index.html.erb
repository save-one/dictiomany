<div class="container-fluid">
	<div class="row">
		<p>Dictiomanyトップ > 辞書</p>
		<div class="col-xs-9">

			<div class="panel panel-default">
				<div class="panel-body meaning-panel-body">
					<div>
						<span class="font-37"><b>すべての辞書</b></span><span class="font-30"> </span>
					</div>
					<div class="signup">
						<%= search_form_for(@search) do |f| %>
							<div class="col-xs-3">
								<select class="form-control" name="refine">
									<option value="all">すべてのカテゴリー</option>
								</select>
							</div>

							<div class= "input-group col-xs-9">
							<%= f.search_field :name_or_category_parent_or_category_cont, class: "form-control search-field" %>
							<span class="input-group-btn">
								<button type="submit" class="btn btn-default">
									<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
								</button>
							</span>
							</div>

						<% end %>
					</div>

				</div>
			</div>

			<div class="panel panel-default">
				<!-- <div class="panel-heading">
					<p>辞書検索</p>
				</div> -->
				<div class="panel-body" style="padding-bottom: 0;">
					<p><%= @search_content %> の検索結果 </p>
					<table class="table table-default">
						<thead>
							<tr>
								<th>名前</th>
								<th>カテゴリー</th>
								<th>ユーザ名</th>
								<th>お気に入り登録数</th>
							</tr>
						</thead>
						<tbody>
							<% @dictions.each do |d| %>
							<tr>
								<td><%= link_to d.name, diction_path(d) %>
									<% if d.public_flg === false %>
										<span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
									<% end %>
								</td>
								<td><%= d.category_parent %> / <%= d.category %></td>
								<td><% user_name = User.find(d.user_id) %>
									<%= user_name.name %>
								</td>
								<td>
									<% favo = FavoriteDiction.where(diction_id: d.id).count %>
									<span class="glyphicon glyphicon-star" aria-hidden="true"></span>： <%= favo %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				<div class="panel-footer">
					<p>前の検索結果に戻る　ページネーション</p>
				</div>
			</div>

		</div>

<%= render partial: "layouts/sidebar" %>
	</div>
</div>
