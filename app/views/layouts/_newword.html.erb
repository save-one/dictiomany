<!-- word -->
<div class="modal fade" id="new-word" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span>✖</span></button>
				<h4 class="modal-title">New Word</h4>
			</div>
			<div class="modal-body newform-body">
				<%= form_for(@new_word, url:diction_words_path(@diction.id) , html: {:class => "form-group"}) do |f| %>
				<div>
					<%= f.label "名前", {class: "form-label"} %>
					<%= f.text_field :name, class: "form-control", required:true %>
				</div>

				<div class="signup">
					<%= f.label "フリガナ", {class: "form-label"} %>
					<%= f.text_field :kana, class: "form-control", required:true %>
				</div>


				<div class="signup">
					<%= f.label "カテゴリー（大）", {class: "form-label"} %>
					<div style="width: 30%;">
						<select name="category_parent" id="parent_word" class="form-control" required>
								<option value="">----------</option>
								<% @parents.each do |p| %>
								<option value=<%= p %>><%= p %></option>
								<% end %>
						</select>
					</div>
				</div>
				<div class="signup">
					<%= f.label "カテゴリー（小）", {class: "form-label"} %>
					<div style="width: 30%;">
						<select name="category" id="child_word" class="form-control" required>
							<option value="">----------</option>
						</select>
					</div>
				</div>

			</div>
			<div class="modal-footer row newform-footer">
				<div class="col-xs-9">
					<%= f.submit "作成する", class: "btn btn-primary form-control" %>
				</div>
				<div class="col-xs-3" >
					<button type="button" class="btn btn-default form-control" data-dismiss="modal">閉じる</button>
				</div>

				<% end %>
				<!-- <button type="button" class="btn btn-primary">ボタン</button -->
			</div>

		</div>
	</div>
</div>