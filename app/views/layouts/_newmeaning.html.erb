<!-- meaning -->
<div class="modal fade" id="new-meaning" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span>✖</span></button>
				<h4 class="modal-title">New Meaning</h4>
			</div>
			<div class="modal-body newform-body">
				<%= form_for(@new_meaning, url:diction_word_meanings_path(diction_id: @diction.id, word_id: @word.id) , html: {:class => "form-group"}) do |f| %>
				<div>
					<%= f.label "意味", {class: "form-label"} %>
					<%= f.text_field :content, class: "form-control", required:true %>
				</div>

			</div>
			<div class="modal-footer row newform-footer">
				<div class="col-xs-9">
					<%= f.submit "作成する", class: "btn btn-primary form-control" %>
				</div>
				<div class="col-xs-3" >
					<button type="button" class="btn btn-default form-control" data-dismiss="modal">閉じる</button>
				</div>

				<% end %>
				<!-- <button type="button" class="btn btn-primary">ボタン</button -->
			</div>

		</div>
	</div>
</div>