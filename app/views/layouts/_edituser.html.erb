<!-- モーダル・ダイアログ -->
<div class="modal fade" id="edit_user" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span>✖</span></button>
				<h4 class="modal-title">アカウント情報の編集</h4>
			</div>
			<div class="modal-body newform-body">
				<% @user_edit = current_user %>
				<%= form_for(@user_edit, url:user_path(@user_edit), html: {:class => "form-group"}) do |f| %>

				<!--画像用　こういう記述で画像をinputとしてクリックできる（ラベルとdisplay:none;に注目）-->
				<div class="row">
					<div class="col-xs-3" id="acount_image_edit" data-toggle="tooltip" title="<h5><b style='color: #fff'>プロフィール画像を変更</b></h5>" data-placement="right" data-animation="true" data-html="true" >

						<%= f.label :image do %>
						<%= f.attachment_field :image, style: "display:none;" %>
						<%= attachment_image_tag @user_edit, :image, format: "png", fallback: "img/acount_image1.png", :class => "thumb center-block uploaded thumbs" %>
						<% end %>

					</div>
					<div class="col-xs-9">
					</div>
				</div>

				<div class="signup">
					<%= f.label "アカウント名", {class: "form-label"} %>
					<%= f.text_field :name, class: "form-control", required:true %>
				</div>

				<div class="signup">
					<%= f.label "ステータスメッセージ", {class: "form-label"} %>
					<%= f.text_field :user_word, class: "form-control" %>
				</div>

				<div class="signup">
				    <%= f.label "性別", {class: "form-label"} %><br />
				    <div class="btn-group" data-toggle="buttons">
				        <!--checked:trueが一発で反映されないからactive しかもちゃんと変化するすごい-->
				        <!-- 上記のことはedit部分では、checkedが使えないためにif文でactiveを判断して配置する -->
				        <% if @user_edit.gender == "男性" %>
				        <label class="btn btn-default active">
				        	<%= f.radio_button :gender, "男性" %>男性<br>
				        </label>
				        <label class="btn btn-default">
				        	<%= f.radio_button :gender, "女性" %>女性
				        </label>
				        <% elsif @user_edit.gender == "女性" %>
				        <label class="btn btn-default">
				        	<%= f.radio_button :gender, "男性" %>男性<br>
				        </label>
				        <label class="btn btn-default active">
				        	<%= f.radio_button :gender, "女性" %>女性
				        </label>
				        <% end %>
				    </div>
				</div>

				<div class="signup">
					<%= f.label "生年月日", {class: "form-label"} %>
					<%= f.date_field :birthday, class: "form-control", required:true %>
				</div>

			</div>
			<div class="modal-footer row newform-footer">
				<div class="col-xs-9">
					<%= f.submit "変更を保存する", class: "btn btn-primary form-control", data: {disable_with: "保存中..."} %>
				</div>
				<div class="col-xs-3" >
					<button type="button" class="btn btn-default form-control" data-dismiss="modal">閉じる</button>
				</div>

				<% end %>
				<!-- <button type="button" class="btn btn-primary">ボタン</button -->
			</div>

		</div>
	</div>
</div>
