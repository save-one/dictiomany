<div class="container-fluid">
	<div class="row">
		<p>Dictiomanyトップ > </p>
		<div class="col-xs-9">

			<div class="panel panel-default" id="favo-d-div">
				<div class="panel-body meaning-panel-body">
					<div>
						<span class="font-37"><b>過去の通報</b></span><!-- <span class="font-30"></span> -->

					</div>
				</div>
			</div>



			<div class="panel panel-default">
				
				<div class="panel-body" style="padding-bottom: 0;">
					<p><%= @reports.total_count %>件中 <%= @reports.offset_value %>～<%= @reports.offset_value + @reports.length %>件を表示しています</p>
					<table class="table table-default">
						<thead>
							<tr>
								<th>お問い合わせ日</th>
								<th>対象コメント</th>
								<th>通報理由</th>
								<th>対処</th>
							</tr>
						</thead>
						<tbody>
							<% @reports.each do |r| %>
							<tr>
								<%= form_for(r, url: admins_report_path(r)) do |f| %>
								<% comment = Comment.find(r.comment_id) %>
								<% m = Meaning.find(comment.meaning_id) %>
								<% w = Word.find(m.word_id) %>
								<% d = Diction.find(w.diction_id) %>
								<td><%= link_to r.created_at.strftime('%Y年%m月%d日') ,admins_report_path(id: r.id) %></td>
								<td><%= link_to comment.content, admins_diction_word_meaning_path(diction_id: d.id, word_id: w.id, id: m.id) %></td>
								<td><%= r.reason %></td>
								<td><%= f.select :deal, [["---", ""], ["保留中", "保留中"], ["削除済み", "削除済み"], ["問題なし", "問題なし"]], {}, :class => "report_select", :prompt => "選択してください" %></td>
								<% end %>

							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				<div class="panel-footer">
					<% if @reports.count < 25 %>
						<nav>
						    <ul class="pagination">
						    	<li class="page-item active">
						    		<a href="#" >1</a>
						    	</li>
						    </ul>
						</nav>
					<% else %>
						<%= paginate @reports %>
					<% end %>
				</div>
			</div>

		</div>
			
<%= render partial: "admins/layouts/sidebar" %>
	</div>
</div>

