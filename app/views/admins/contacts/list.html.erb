<div class="container-fluid">
	<div class="row">
		<p>Dictiomanyトップ > </p>
		<div class="col-xs-9">

			<div class="panel panel-default" id="favo-d-div">
				<div class="panel-body meaning-panel-body">
					<div>
						<span class="font-37"><b>すべてのお問い合わせ</b></span><!-- <span class="font-30"></span> -->

					</div>
				</div>
			</div>



			<div class="panel panel-default">
				
				<div class="panel-body" style="padding-bottom: 0;">
					<p><%= @contacts.total_count %>件中 <%= @contacts.offset_value %>～<%= @contacts.offset_value + @contacts.length %>件を表示しています</p>
					<table class="table table-default">
						<thead>
							<tr>
								<th>お問い合わせ日</th>
								<th>題名</th>
								<th>内容</th>
								<th>アカウント名</th>
								<th>返信</th>
							</tr>
						</thead>
						<tbody>
							<% @contacts.each do |c| %>
							<tr>
								<td><%= link_to c.created_at.strftime('%Y年%m月%d日') ,admins_user_contact_path(user_id: c.user_id, id: c.id) %></td>
								<td><%= c.title %></td>
								<td><%= c.content %></td>
								<td><% c_user = User.find(c.user.id) %><i class="fas fa-user"></i> <%= c_user.name %></td>
								<% if c.reply.present? %>
									<td>済み</td>
								<% else %>
									<td style="color: red;">未回答</td>
								<% end %>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				<div class="panel-footer">
					<% if @contacts.count < 25 %>
						<nav>
						    <ul class="pagination">
						    	<li class="page-item active">
						    		<a href="#" >1</a>
						    	</li>
						    </ul>
						</nav>
					<% else %>
						<%= paginate @contacts %>
					<% end %>
				</div>
			</div>

		</div>
			
<%= render partial: "admins/layouts/sidebar" %>
	</div>
</div>

