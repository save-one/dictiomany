<% breadcrumb :admin_contacts, @side_user %>
<div class="container-fluid">
	<div class="row">
		<div class="col-lg-9 col-xs-12">
			<%= render partial: "layouts/breadcrumbs" %>
			<div class="panel panel-default" id="favo-d-div">
				<div class="panel-body meaning-panel-body">
					<div>
						<span class="font-37"><b>過去のお問い合わせ</b></span><!-- <span class="font-30"></span> -->
					<br class="visible-xs-block">
					</div>
				</div>
			</div>



			<div class="panel panel-default">
				
				<div class="panel-body" style="padding-bottom: 0;">
					<p><%= @contacts.total_count %>件中 <%= @contacts.offset_value %>～<%= @contacts.offset_value + @contacts.length %>件を表示しています</p>
					<table class="table table-default">
						<thead>
							<tr>
								<th>お問い合わせ日</th>
								<th>題名</th>
								<th class="hidden-xs">内容</th>
								<th class="hidden-xs">返信</th>
							</tr>
						</thead>
						<tbody>
							<% @contacts.each do |c| %>
							<tr>
								<td><%= link_to c.created_at.strftime('%Y年%m月%d日') ,admins_user_contact_path(user_id: c.user_id, id: c.id) %></td>
								<td><%= c.title.truncate(15) %></td>
								<td class="hidden-xs"><%= c.content.truncate(18) %></td>
								<% if c.reply.present? %>
									<td class="hidden-xs" style="color: red;">あり（詳細ページをご覧ください）</td>
								<% else %>
									<td class="hidden-xs">なし</td>
								<% end %>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				<div class="panel-footer">
					<% if @contacts.count < 25 %>
						<nav>
						    <ul class="pagination">
						    	<li class="page-item active">
						    		<a href="#" >1</a>
						    	</li>
						    </ul>
						</nav>
					<% else %>
						<%= paginate @contacts %>
					<% end %>
				</div>
			</div>

		</div>
			
<%= render partial: "admins/layouts/sidebar" %>
	</div>
</div>

